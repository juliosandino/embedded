{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build"
        },
        {
            "label": "mkdir build",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/build",
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=Debug",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "clean",
                "mkdir build"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build . -j 16",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "configure"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}